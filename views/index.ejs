<!-- Updating the Home View and adding semantic tags -->
<h1>Welcome to CSE Motors!</h1>
<%- messages() %>

    <!-- The Hero section -->
    <section id="hero">
        <div id="hero-details">
            <h2>DMC Delorean</h2>
            <p>3 Cup holders<br>Superman doors<br>Fuzzy dice!</p>
            <a href="#" title="Check out the Delorean" class="cta-button">Own Today</a>
        </div>
        <div>
            <img src="/public/images/vehicles/delorean.jpg" alt="DMC Delorean Car">
        </div>
    </section>

    <div class="content-wrapper">
        <!-- The Reviews and Upgrades Section -->
        <section id="reviews">
            <h3>DMC Delorean Reviews</h3>
            <ul>
                <li>"So fast it's almost like traveling in time." (4/5)</li>
                <li>"Coolest ride on the road." (4/5)</li>
                <li>"I'm feeling McFly!" (5/5)</li>
                <li>"The most futuristic ride of our day." (4.5/5)</li>
                <li>"80's livin and I love it!" (5/5)</li>
            </ul>
        </section>

        <section id="upgrades">
            <h3>Delorean Upgrades</h3>
            <div class="upgrade-grid">
                <div class="upgrade-item">
                    <div class="img-box"><img src="/public/images/upgrades/hub-cap.jpg" alt="Flux Capacitor"></div>
                    <a href="#">Flux Capacitor</a>
                </div>
                <div class="upgrade-item">
                    <div class="img-box"><img src="/public/images/upgrades/flame.jpg" alt="Flame Decals"></div>
                    <a href="#">Flame Decals</a>
                </div>
                <div class="upgrade-item">
                    <div class="img-box"><img src="/public/images/upgrades/bumper_sticker.jpg" alt="Bumper Sticker"></div>
                    <a href="#">Bumper Stickers</a>
                </div>
                <div class="upgrade-item">
                    <div class="img-box"><img src="/public/images/upgrades/hub-cap.jpg" alt="Hub Caps"></div>
                    <a href="#">Hub Caps</a>
                </div>
            </div>
        </section>
    </div>